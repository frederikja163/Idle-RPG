{
  "compilerOptions": {
    "jsx": "react-jsx",
    // Bundler mode
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "lib": ["ESNext"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",]
}
