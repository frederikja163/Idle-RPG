{
  "compilerOptions": {
    "jsx": "react-jsx",
    // Bundler mode
    "moduleResolution": "bundler",
    "module": "preserve",
    "target": "ES2024",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
